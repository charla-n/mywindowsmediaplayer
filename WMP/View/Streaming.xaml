<Window x:Class="WMP.Streaming"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Streaming" Height="150" Width="300" MinHeight="150" MaxHeight="150">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,14.04"><Run Language="fr-fr" Text="Enter streaming path :"/></TextBlock>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" Grid.Row="1" Margin="10,0"/>
        <Button Click="Button_Click" Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Grid.Row="2" Margin="190,20,0,0"/>
    </Grid>
</Window>
